<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    tools:context=".ui.game.GameActivity">

    <ImageView
        android:id="@+id/iv_game_title"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/ic_game_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fl_player_scissor_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:background="@drawable/bg_action_button">

        <ImageView
            android:id="@+id/iv_player_scissor_left"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_scissors_8bit_left" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_player_paper_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/fl_player_scissor_left"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:background="@drawable/bg_action_button">

        <ImageView
            android:id="@+id/iv_player_paper_left"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_paper_8bit" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_player_rock_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/fl_player_paper_left"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:background="@drawable/bg_action_button">

        <ImageView
            android:id="@+id/iv_player_rock_left"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_rock_8bit" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_player_scissor_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@drawable/bg_action_button">

        <ImageView
            android:id="@+id/iv_player_scissors_right"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_scissors_8bit_right" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_player_paper_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/fl_player_scissor_right"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@drawable/bg_action_button">

        <ImageView
            android:id="@+id/iv_player_paper_right"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_paper_8bit" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_player_rock_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/fl_player_paper_right"
        app:layout_constraintRight_toRightOf="parent"
        tools:background="@drawable/bg_action_button">

        <ImageView
            android:id="@+id/iv_player_rock_right"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/ic_rock_8bit" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_player_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pixelated_font"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_28ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_game_title"
        tools:text="PLAYER 1" />

    <TextView
        android:id="@+id/tv_player_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/pixelated_font"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_27ssp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_game_title"
        tools:text="COM" />

    <ImageView
        android:id="@+id/ic_restart"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:src="@drawable/ic_restart_icon" />

    <ImageView
        android:id="@+id/ic_versus"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_100sdp"
        app:layout_constraintBottom_toTopOf="@id/ic_restart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@drawable/ic_versus_icon" />

    <TextView
        android:id="@+id/tv_restart_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/pixelated_font"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toTopOf="@id/ic_restart"
        app:layout_constraintLeft_toLeftOf="@id/ic_restart"
        app:layout_constraintRight_toRightOf="@id/ic_restart"
        tools:text="restart game" />

    <ImageView
        android:id="@+id/ic_return_to_menu"
        android:rotation="50"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@id/iv_game_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@drawable/ic_return_to_menu"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>